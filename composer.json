{
	"name"			: "ipub/doctrine-dynamic-discriminator-map",
	"type"			: "library",
	"description"	: "Dynamic discriminator map for doctrine and Nette Framework",
	"keywords"		: ["doctrine2", "doctrine", "nette", "ipub", "ipublikuj", "tools"],
	"homepage"		: "https://github.com/iPublikuj/doctrine-dynamic-discriminator-map",
	"license"		: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "Adam Kadlec",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/doctrine-dynamic-discriminator-map/issues"
	},

	"require": {
		"php"			: ">=5.4",
		"doctrine/orm"	: "2.3.*@stable",
		"nette/di"		: "~2.2",
		"nette/utils"	: "~2.2",
		"kdyby/events"	: "~2.0"
	},

	"require-dev": {
		"nette/tester"		: "@dev",
		"janmarek/mockista"	: "@dev"
	},

	"autoload": {
		"psr-4": {
			"IPub\\DoctrineDynamicDiscriminatorMap\\": "src/IPub/DoctrineDynamicDiscriminatorMap/"
		}
	},

	"autoload-dev": {
		"classmap": ["tests/IPubTests/"]
	}
}